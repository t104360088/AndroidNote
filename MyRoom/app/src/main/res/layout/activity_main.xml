<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="名字:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textName"
            android:textSize="22sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editName"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/textName"
            app:layout_constraintBottom_toBottomOf="@id/textName"
            app:layout_constraintStart_toEndOf="@id/textName"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="年齡:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textAge"
            android:textSize="22sp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/textName"
            app:layout_constraintTop_toBottomOf="@id/textName"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editAge"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@id/textAge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textAge"
            app:layout_constraintBottom_toBottomOf="@id/textAge"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"/>
    <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textAge" tools:layout_editor_absoluteX="8dp">
        <Button
                android:text="新增"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAdd"
                android:layout_weight="1"/>
        <Button
                android:text="修改"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRevise"
                android:layout_weight="1"/>
        <Button
                android:text="刪除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDelete"
                android:layout_weight="1"/>
        <Button
                android:text="查詢"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnQuery"
                android:layout_weight="1"/>
    </LinearLayout>

    <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"/>

</android.support.constraint.ConstraintLayout>